<script>
    $(document).ready(function () {
        var Answer = "@Model.Answer";
        var length = Answer.length;
        var wrong = 0;

        $('.lblWrong').text('Wrong : '+wrong);

        function createTable() {
            var label = "<span class='lblAnswer" + i + " Answer'>_</span>";
            var label2 = "<span class='lblAnswer" + i + " Answer'> </span>";
            if (Answer[i] == " ") {
                $('.play').append(label2);
            } else {
                $('.play').append(label);
            }
            
        }

        for (var i=0; i<length; i++){
            createTable();
        }

        $('button').click(function () {
            
            $(this).css('background-color','red');
            $(this).attr('disabled',true);

            var button = $(this);
            var benar = 0;
            var flag = 0;

            for (var i=0; i<length; i++){
                if (button.val() == Answer[i]){
                    $('.lblAnswer'+i).text(Answer[i]);
                    flag = 1;
                }
            }// END OF FOR CHECKING THE PRESSED BUTTON

            for (var i=0; i<length; i++){
                if (Answer[i] == $('.lblAnswer'+i).text()){
                    benar = benar + 1;
                }
            }
            console.log("benar : " + benar + ", length : " + length);
            // IF WIN
            if (benar == length){
                swal({
                    title:'Congratulations!',
                    text:'You have answered the question correctly!',
                    icon:'success'
                }).then((isConfirm) => {
                    if (isConfirm) {
                        $('#Status').val(1);
                        $('#formPlay').submit();
                    }
                });
               
            }

            if (flag == 0){
                wrong = wrong + 1;
                $('.lblWrong').text('Wrong : '+wrong);

                if (wrong == 5){
                    swal({
                        title: "You lose",
                        text: "Redirecting to home page...",
                        icon: 'error',
                        confirmButtonText: "OK"
                    }).then((isConfirm) => {
                        if (isConfirm) {
                            $('#Status').val(0);
                            $('#formPlay').submit();
                        }
                    });
                    
                    
                }
            }
            

        });
    });
</script>

