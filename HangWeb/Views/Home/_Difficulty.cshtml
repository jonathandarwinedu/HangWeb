@model List<HangWeb.Models.Questions>

@Styles.Render("~/Content/bootstrapcss")
@Scripts.Render("~/bundles/bootstrapjs")
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<h3>@ViewBag.header</h3>

@for (int i = 0; i < Model.Count; i++)
{
    <div class="question">
        <label>Name : @Model[i].NameQuestionBy</label>
        @if (Session["IDUser"] != null)
        {
            <button class="btn btn-primary btnQuestion pull-right" id="@Model[i].IDQuestion">Try</button>
        }
        <label>Question : @Model[i].Question</label>
    </div>
}

<script>
    $(document).ready(function () {
        @*$('.btnQuestion').on('click', function () {
            var idquestion = $(this).id;
            console.log(idquestion);
            window.location = '@Url.Action("Index","Play")?IDQuestion=' + idquestion;
        });*@

        $('.btnQuestion').on('click', function () {
            var id = $(this).attr('id');            
            window.location = '/Play/Index?IDQuestion='+id;
        });
    });
</script>
